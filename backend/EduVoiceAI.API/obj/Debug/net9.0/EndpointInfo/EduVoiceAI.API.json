    "/api/IA/ask": {
      "post": {
        "tags": [
          "IA"
        ],
        "summary": "Envía una pregunta al servicio de IA",
        "description": "Ejemplo de solicitud:\r\n\r\n    POST /api/ia/ask\r\n    {\r\n        \"prompt\": \"¿Cómo puedo organizar mejor mi tiempo de estudio?\"\r\n    }\r\n    \r\nCon contexto:\r\n\r\n    POST /api/ia/ask\r\n    {\r\n        \"prompt\": \"¿Qué temas debo repasar?\",\r\n        \"context\": \"Tengo un examen de matemáticas la próxima semana\"\r\n    }",
        "requestBody": {
          "description": "Objeto con el prompt de la pregunta y contexto opcional",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/IARequestDto"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/IARequestDto"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/IARequestDto"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Retorna la respuesta de la IA exitosamente",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/IAResponseDto"
                }
              }
            }
          },
          "400": {
            "description": "Prompt inválido o vacío",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          }
        }
      }
    },
    "/api/IA/voice": {
      "post": {
        "tags": [
          "IA"
        ],
        "summary": "Transcribe un archivo de audio a texto usando IA",
        "description": "Ejemplo de solicitud usando cURL:\r\n\r\n    curl -X POST \"https://localhost:5001/api/ia/voice\" \\\r\n      -H \"Content-Type: multipart/form-data\" \\\r\n      -F \"audioFile=@/path/to/audio.mp3\"\r\n    \r\nFormatos soportados: MP3, WAV, M4A, OGG\r\nTamaño máximo recomendado: 10MB",
        "requestBody": {
          "content": {
            "multipart/form-data": {
              "schema": {
                "required": [
                  "audioFile"
                ],
                "type": "object",
                "properties": {
                  "audioFile": {
                    "type": "string",
                    "format": "binary"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Retorna el texto transcrito exitosamente",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/VoiceTranscriptionResponse"
                }
              }
            }
          },
          "400": {
            "description": "Archivo de audio inválido o formato no soportado",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          }
        }
      }
    },
