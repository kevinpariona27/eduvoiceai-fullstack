{
  "openapi": "3.0.4",
  "info": {
    "title": "EduVoiceAI API",
    "description": "\r\n            API RESTful para la plataforma EduVoiceAI - Sistema de gestión educativa con asistencia por voz.\r\n            \r\n            Esta API proporciona endpoints para:\r\n            - **UserProfiles**: Gestión de perfiles de usuario\r\n            - **TaskPlans**: Administración de tareas y planes de estudio\r\n            - **EventReminders**: Manejo de recordatorios y eventos importantes\r\n            \r\n            Todos los endpoints soportan operaciones CRUD completas y utilizan DTOs para la transferencia de datos.\r\n        ",
    "contact": {
      "name": "EduVoiceAI Team",
      "url": "https://eduvoiceai.com",
      "email": "support@eduvoiceai.com"
    },
    "license": {
      "name": "MIT License",
      "url": "https://opensource.org/licenses/MIT"
    },
    "version": "v1"
  },
  "paths": {
    "/api/EventReminders/{id}": {
      "delete": {
        "tags": [
          "EventReminders"
        ],
        "summary": "Elimina un evento",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID del evento a eliminar",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "Evento eliminado exitosamente"
          },
          "404": {
            "description": "Evento no encontrado",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          }
        }
      },
      "get": {
        "tags": [
          "EventReminders"
        ],
        "summary": "Obtiene un evento por ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID del evento",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Retorna el evento encontrado",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/EventReminderDto"
                }
              }
            }
          },
          "404": {
            "description": "Evento no encontrado",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          }
        }
      },
      "put": {
        "tags": [
          "EventReminders"
        ],
        "summary": "Actualiza un evento existente",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID del evento a actualizar",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "requestBody": {
          "description": "Datos actualizados del evento",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/EventReminderDto"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/EventReminderDto"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/EventReminderDto"
              }
            }
          }
        },
        "responses": {
          "204": {
            "description": "Evento actualizado exitosamente"
